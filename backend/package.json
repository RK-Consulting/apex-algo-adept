{
  "name": "alphaforge-backend",
  "version": "1.0.0",
  "description": "Standalone backend server for AlphaForge trading platform",
  "type": "module",
  "main": "dist/server.js",

  "scripts": {
    "preflight": "npm run db:verify && npm run env:verify",

    "env:verify": "node ../scripts/env/verify-env.js backend/.env",

    "db:verify": "bash ../scripts/db/verify-db.sh",
    "db:migrate": "bash ../scripts/db/migrate.sh",

    "build": "tsc",
    "start": "node --env-file=.env ./dist/server.js",

    "migrate": "npm run build && node --env-file=.env ./dist/scripts/migrate.js",
    "seed": "npm run build && node --env-file=.env ./dist/scripts/seed.js",

    "refresh:icici": "node --env-file=.env ./dist/scripts/refreshIciciSession.js",

    "test": "jest --runInBand"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "breezeconnect": "1.0.29",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "debug": "^4.3.4",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.4.0",
    "helmet": "^7.1.0",
    "ioredis": "^5.4.1",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.12.0",
    "uuid": "^10.0.0",
    "axios": "1.8.2",
    "axios-retry": "^4.5.0"
  },

  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.14.0",
    "@types/pg": "^8.11.6",
    "@types/uuid": "^10.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "tsx": "^4.15.0",
    "typescript": "^5.5.0"
  },

  "overrides": {
    "axios": "1.8.2"
  },

  "engines": {
    "node": ">=18.0.0"
  }
}
