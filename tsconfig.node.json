{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "ESNext",
    "moduleResolution": "bundler",

    "isolatedModules": true,
    "skipLibCheck": true,
    "noEmit": true,

    /* Vite config should stay simple */
    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": false
  },
  "include": ["vite.config.ts"]
}
