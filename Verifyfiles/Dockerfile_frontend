# ======================================
# ‚öõÔ∏è AlphaForge Frontend (Vite + React)
# ======================================
FROM node:20-alpine AS build

WORKDIR /app

COPY package*.json ./
RUN npm ci

COPY . .

# Build static frontend (optimized)
RUN npm run build

# ======================================
# üöÄ Nginx Serving Stage
# ======================================
FROM nginx:1.26-alpine

# Copy build output
COPY --from=build /app/dist /usr/share/nginx/html

# Copy Brotli/Gzip-enabled Nginx config
COPY nginx.conf /etc/nginx/conf.d/default.conf

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]
