{
  "compilerOptions": {
    /* Modern output for Vite/ESBuild */
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],

    /* Correct module system for Vite */
    "module": "ESNext",
    "moduleResolution": "bundler",

    /* Required for React + Vite */
    "jsx": "react-jsx",
    "isolatedModules": true,
    "noEmit": true,

    /* TS behavior */
    "skipLibCheck": true,
    "strict": false,
    "noImplicitAny": false,

    /* Keep unused flags OFF for UI-heavy project */
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": false,

    /* Fix alias resolution (IMPORTANT) */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src"]
}
